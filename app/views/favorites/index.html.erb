<div class="favoritePets">
<% unless @favorites.contents.empty? == true %>
  <h1>Favorite Pets</h1>

  <% @pets.each do |pet| %>
    <section id="favorites-<%= pet.id %>">
      <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
      <p><%= image_tag "#{pet.image}" %></p>
    </section>
  <% end %>
  <%= link_to 'Adopt Pet(s)', "/applications/new" %>
  <h3><%= link_to 'Remove all favorited pets', '/favorites', method: :delete  %></h3>
</div>
<% else %>
  <h2>No Pets to Display. Please add some pets to your favorites!</h2>
<% end %>
