<div class="formTemplate">
  <h1>Add a New Shelter</h1>
  <div class="effect2"><%= image_tag 'https://i.imgur.com/Y4SC3En.jpg' %></div>
  <div class="formAlign">
    <%= form_tag '/shelters', method: :post do %>
      <div>
        <p>Name:</p>
        <%= text_field_tag :name, nil, placeholder: 'Name of shelter?', class: "formField" %>
      </div>
      <div>
        <p>Address:</p>
        <%= text_area_tag :address, nil, placeholder: 'Shelter address?', class: "formField" %>
      </div>
      <div>
        <p>City:</p>
        <%= text_field_tag :city, nil, placeholder: 'City where shelter is located?', class: "formField" %>
      </div>
      <div>
        <p>State:</p>
        <%= text_field_tag :state, nil, placeholder: 'State?', class: "formField" %>
      </div>
      <div>
        <p>Zip:</p>
        <%= text_field_tag :zip, nil, placeholder: 'Zip Code?', class: "formField" %>
      </div>
      <%= submit_tag 'Create Shelter', class: "button" %>
      </div>
    <% end %>
  </div>
</div>
